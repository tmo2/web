<div class="post-show container">
  <div class="post-area">
    <div class="post-header flex">
      <div class="post-date">
        <%= @post.created_at.strftime("%Y年%-m月%-d日 %H:%M")%>
      </div>
      <div class="post-user">
        <%= @post.user.name %>
      </div>
    </div>
    <div class="post-body">
      <div class="post-title">
        <%= @post.title %>
      </div>
      <div class="post-content">
        <%= @post.content %>
      </div>
    </div>
  </div>
  <div class="comment-area">
    <ul class="comments">
      <% @comments.each do |c| %>
        <li>
          <div class="post-header flex">
            <div class="post-date">
              <%= c.created_at.strftime("%Y年%-m月%-d日 %H:%M")%>
            </div>
            <div class="post-user">
              <%= c.user.name %>
            </div>
          </div>
          <div class="post-content">
            <%= c.content %>
          </div>
        </li>
      <% end %>
    </ul>
    <div class="comment-form">
      <%= form_tag controller: "comments", action: "create",remote: true do %>
        <%= text_field_tag 'comment[content]', "", class: "form-text area" %>
        <br>
        <%= submit_tag 'submit', value: "コメントする", class: "btn-theme" %>
      <% end %>
    </div>
  </div>
</div>
